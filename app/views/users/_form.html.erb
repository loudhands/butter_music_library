<% form_for @user do |f| %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.text_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :admin %>
    <%= f.check_box :admin %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>

